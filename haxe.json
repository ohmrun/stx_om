{
  "build" : {
    "-resource" : ["src/main/haxe/resources/test.pml@test.pml"],
    "-D" : ["no-deprecation-warnings","stx.parse.switches.debug=false"],
    "-lib" : ["stx_pico","stx_nano","stx_ds","stx_log","stx_assert","pml","stx_parse"],
    "-cp" : "src/main/haxe",
    "unit" : {
      "--macro" : [
        "include('stx.assert',true)",
        "include('stx.om',true)",
        "include('stx.om.Spine',true)",
        "include('stx.om.spine',true)",
        "include('stx.om.Signature',true)",
        "include('stx.om.signature',true)"
      ],
      "interp" : {
        "--interp" : true
      }
    },
    "test" : {
      "-main" : "stx.om.Test",
      "interp" : {
        "--interp" : true
      }
    }
  }
}
